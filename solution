from tkinter import * 
from tkinter.ttk import *

# create a root window.
top = Tk()

# create listbox object

listbox = Listbox(top, height = 50, 
                  width = 110, 
                  bg = "lightGrey",
                  activestyle = 'dotbox', 
                  font = "Helvetica",
                  fg = "black")

# Define the size of the window.
top.geometry("300x250")  

# Define a label for the list.  
label = Label(top, " NOTES") 

# insert elements by their
# index and names.
listbox.insert(1, "NAME!")
listbox.insert(2, "NAME2")
listbox.insert(3, "NAME3")#change these to variables set to users later
listbox.insert(4, "NAME4")
listbox.insert(5, "NAME5")

listbox.grid(row=5)
# pack the widgets
label.pack()
listbox.pack()


# Display until User 
# exits themselves.
top.mainloop()