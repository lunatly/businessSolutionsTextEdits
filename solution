import tkinter as tk

root = tk.Tk()
root.title("Visible Grid Hack")
root.configure(background='gray') # Color of the grid lines

# Create and place frames with internal padding
for row in range(3):
    for col in range(3):
        frame = tk.Frame(root, width=50, height=50, background='white', relief='ridge', borderwidth=1) # The "cells"
        # padx/pady create the space where the 'gray' root background shows through
        frame.grid(row=row, column=col, padx=2, pady=2, sticky="nsew") 

root.mainloop()
from tkinter import * 
# creating main tkinter window/toplevel
master = Tk()

# this will create a label widget
l1 = Label(master, text = 'name')
l2 = Label(master, text = 'date')

# grid method to arrange labels in respective
# rows and columns as specified
l1.grid(row = 0, column = 0, sticky = W, pady = 2)
l2.grid(row = 0, column = 0, sticky = W, pady = 2)

# entry widgets, used to take entry from user
e1 = Entry(master)
e2 = Entry(master)

# this will arrange entry widgets
e1.grid(row = 0, column = 1, pady = 2)
e2.grid(row = 5, column = 6, pady = 2)

# infinite loop which can be terminated by keyboard
# or mouse interrupt
mainloop()